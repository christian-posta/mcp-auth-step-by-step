{
  "realm": {
    "name": "mcp-realm",
    "displayName": "MCP Server Realm",
    "enabled": true,
    "accessTokenLifespan": 3600,
    "accessTokenLifespanForImplicitFlow": 1800,
    "ssoSessionIdleTimeout": 3600,
    "ssoSessionMaxLifespan": 72000,
    "offlineSessionIdleTimeout": 2592000,
    "attributes": {
      "spiffe.trust.domain": "example.org",
      "spiffe.jwks.url": "http://spire-oidc-discovery:8443/keys"
    }
  },
  "authenticationFlows": [
    {
      "name": "spiffe-clients",
      "description": "SPIFFE-enabled client authentication flow",
      "copyFrom": "clients",
      "authenticators": [
        {
          "providerId": "client-spiffe-jwt",
          "requirement": "ALTERNATIVE"
        }
      ],
      "setAsDefault": {
        "clientAuthentication": true
      }
    }
  ],
  "clients": [
    {
      "clientId": "mcp-test-client",
      "name": "MCP Test Client",
      "type": "public",
      "enabled": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "fullScopeAllowed": false,
      "assignedScopes": {
        "default": ["echo-mcp-server-audience"],
        "optional": ["mcp:read", "mcp:tools", "mcp:prompts"]
      }
    },
    {
      "clientId": "spiffe://example.org/mcp-test-client",
      "name": "SPIFFE Test Client",
      "type": "confidential",
      "enabled": true,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-spiffe-jwt",
      "directAccessGrantsEnabled": true,
      "fullScopeAllowed": false,
      "assignedScopes": {
        "optional": ["mcp:read", "mcp:tools", "mcp:prompts"]
      },
      "attributes": {
        "use.jwks.url": "true",
        "jwks.url": "http://spire-oidc-discovery:8443/keys",
        "client.secret.creation.time": "1640995200",
        "backchannel.logout.session.required": "false",
        "standard.token.exchange.enabled": "true",
        "issuer": "http://spire-server:8443"
      }
    },     
    {
      "clientId": "echo-mcp-server",
      "name": "Echo MCP Server",
      "type": "confidential", 
      "enabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "tokenExchange": {
        "enabled": true
      },
      "clientSecret": "PLOs4j6ti521kb5ZVVVwi5GWi9eDYTwq",      
      "roles": [
        {
          "name": "tools",
          "description": "Can call tools"
        },
        {
          "name": "prompts",
          "description": "Can call prompts"
        },
        {
          "name": "read-only",
          "description": "Can read resources"
        }
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "echo-mcp-server-audience",
      "description": "Adds echo-mcp-server to token audience",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "false"
      },
      "mappers": [
        {
          "name": "echo-mcp-server-mapper",
          "type": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "echo-mcp-server",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },    
    {
      "name": "mcp:read",
      "description": "Read access to MCP resources",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "roles": [
        {
          "client": "echo-mcp-server",
          "role": "read-only"
        }
      ]
    },
    {
      "name": "mcp:tools",
      "description": "Access to execute MCP tools",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "roles": [
        {
          "client": "echo-mcp-server",
          "role": "tools"
        }
      ]
    },
    {
      "name": "mcp:prompts",
      "description": "Access to MCP prompts",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "roles": [
        {
          "client": "echo-mcp-server",
          "role": "prompts"
        }
      ]
    }
  ],
  "users": [
    {
      "username": "mcp-admin",
      "email": "admin@mcp.example.com",
      "firstName": "MCP",
      "lastName": "Admin",
      "enabled": true,
      "emailVerified": true,
      "password": "admin123",
      "temporary": false,
      "clientRoles": {
        "echo-mcp-server": ["tools", "prompts", "read-only"]
      }
    },
    {
      "username": "mcp-user",
      "email": "user@mcp.example.com",
      "firstName": "MCP",
      "lastName": "User",
      "enabled": true,
      "emailVerified": true,
      "password": "user123",
      "temporary": false,
      "clientRoles": {
        "echo-mcp-server": ["tools", "read-only"]
      }
    },
    {
      "username": "mcp-readonly",
      "email": "readonly@mcp.example.com",
      "firstName": "MCP",
      "lastName": "ReadOnly",
      "enabled": true,
      "emailVerified": true,
      "password": "readonly123",
      "temporary": false,
      "clientRoles": {
        "echo-mcp-server": ["read-only"]
      }
    }
  ]
} 